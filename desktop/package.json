{
  "name": "from-zero-desktop",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-serve": "^2.0.0",
    "get-port": "^7.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fromzero.agent",
    "productName": "From Zero Agent",
    "files": [
      "main.js",
      "preload.js"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
