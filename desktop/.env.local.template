# ============================================
# Desktop (Vite/Renderer) Environment Variables
# ============================================
# متغيرات VITE_ فقط متاحة في واجهة المتصفح/Renderer
# نسخ هذا الملف إلى .env.local وملء القيم

# --------------------------------------------
# Firebase (Renderer)
# --------------------------------------------
VITE_FB_API_KEY=YOUR_KEY
VITE_FB_AUTH_DOMAIN=YOUR_PROJECT.firebaseapp.com
VITE_FB_PROJECT_ID=YOUR_PROJECT
VITE_FB_STORAGE_BUCKET=YOUR_PROJECT.appspot.com
VITE_FB_MSG_SENDER=0000000000
VITE_FB_APP_ID=1:0000000000:web:XXXXXXXXXXXX

# --------------------------------------------
# Feature Flags
# --------------------------------------------
VITE_FEATURE_STRIPE=1
VITE_FEATURE_AGENT=1

# --------------------------------------------
# Stripe Price IDs (Public)
# --------------------------------------------
VITE_STRIPE_PRICE_MONTHLY=price_20usd_monthly
VITE_STRIPE_PRICE_DAILY=price_1usd_daily

# --------------------------------------------
# Output Token Caps (للواجهة - للعرض فقط)
# --------------------------------------------
VITE_GPT5_MAX_OUTPUT_TOKENS=12000
VITE_CLAUDE_CODE_MAX_OUTPUT_TOKENS=8000
VITE_GEMINI_CODE_MAX_OUTPUT_TOKENS=10000

# --------------------------------------------
# Orchestrator Defaults (للواجهة - للعرض فقط)
# --------------------------------------------
VITE_F0_DEFAULT_PLANNER=gpt5
VITE_F0_DEFAULT_CODER=gemini
VITE_F0_DEFAULT_REVIEWER=claude
