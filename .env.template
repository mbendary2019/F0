# ============================================
# F0 Environment Configuration Template
# ============================================
# نسخ هذا الملف إلى .env وملء القيم

# --------------------------------------------
# Ports hygiene
# --------------------------------------------
CLEAN_PORTS=5173,5174,8080

# --------------------------------------------
# Model API Keys (لا تُسلّم للواجهة)
# --------------------------------------------
OPENAI_API_KEY=sk-xxx                 # GPT-5
ANTHROPIC_API_KEY=sk-ant-xxx          # Claude
GEMINI_API_KEY=AIza-xxx               # Gemini

# --------------------------------------------
# Model Selection
# --------------------------------------------
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-2.5-flash
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# --------------------------------------------
# Output token caps (حماية من تجاوز الحدود)
# --------------------------------------------
GPT5_MAX_OUTPUT_TOKENS=12000
CLAUDE_CODE_MAX_OUTPUT_TOKENS=8000
GEMINI_CODE_MAX_OUTPUT_TOKENS=10000

# --------------------------------------------
# Orchestrator policy
# --------------------------------------------
F0_DEFAULT_PLANNER=gpt5
F0_DEFAULT_CODER=gemini
F0_DEFAULT_REVIEWER=claude
F0_MAX_PARALLEL_JOBS=2

# --------------------------------------------
# Server Configuration
# --------------------------------------------
PORT=8080
WRITE_BASE_DIR=../output

# --------------------------------------------
# API Security
# --------------------------------------------
F0_API_KEY=your_api_key_here

# --------------------------------------------
# CORS Origins (development)
# --------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# --------------------------------------------
# Firebase Service Account
# --------------------------------------------
FIREBASE_SERVICE_ACCOUNT_FILE=/path/to/firebase.json

# --------------------------------------------
# Subscription Enforcement (0=disabled)
# --------------------------------------------
REQUIRE_ACTIVE_SUB=0

# --------------------------------------------
# Stripe Configuration (Test Keys)
# --------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_PRICE_ID_DAILY=price_xxx
STRIPE_PRICE_ID_MONTHLY=price_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
