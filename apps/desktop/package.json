{
  "name": "@f0/desktop",
  "private": true,
  "version": "0.1.0",
  "description": "F0 Desktop App - Electron wrapper for autonomous ops",
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "ts-node-esm ./src/dev.ts",
    "build": "tsc -p tsconfig.json && esbuild src/main.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs && esbuild src/preload.ts --bundle --platform=node --format=cjs --outfile=dist/preload.cjs",
    "start": "electron dist/main.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^31.0.0",
    "electron-updater": "^6.3.0",
    "@f0/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.23.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "eslint": "^9.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.f0.desktop",
    "productName": "F0 Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true,
      "identity": null
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico",
      "signAndEditExecutable": true,
      "signingHashAlgorithms": ["sha256"],
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "from-zero-starter"
    },
    "afterSign": "build/notarize.js"
  }
}

