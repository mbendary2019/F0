# ============================================
# F0 Platform - Local Development Environment
# ============================================
# Copy this file to .env.local and fill in your values

# === F0 SDK Configuration ===
F0_API_URL=http://localhost:8088/api
F0_API_KEY=your-f0-api-key-here
NEXT_PUBLIC_F0_ENABLED=1
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:8088
NEXT_PUBLIC_F0_BASE=http://localhost:8787

# === Firebase (Client) ===
FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# === Firebase Emulators (Development) ===
# Set to "1" to use local emulators, "0" or remove for production
NEXT_PUBLIC_USE_EMULATORS=1

# Auth Emulator
NEXT_PUBLIC_AUTH_EMULATOR_HOST=http://127.0.0.1:9099
FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# Firestore Emulator
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080

# Functions Emulator
NEXT_PUBLIC_FUNCTIONS_EMULATOR_HOST=127.0.0.1:5001

# === App Check (ReCaptcha Enterprise) ===
# Get your site key from: https://console.cloud.google.com/security/recaptcha
NEXT_PUBLIC_APPCHECK_SITE_KEY=your-recaptcha-site-key

# For local development, set to "true" to enable debug mode
NEXT_PUBLIC_APPCHECK_DEBUG_TOKEN=true

# === Web Push (FCM) ===
# Generate VAPID keys: https://console.firebase.google.com/project/_/settings/cloudmessaging
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# === Sentry (Error Tracking) ===
# Get from: https://sentry.io/settings/your-org/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id
SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id
SENTRY_ENV=local
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# === Stripe (Payment Processing - Test Mode) ===
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLIC_KEY=pk_test_your-test-key
STRIPE_SECRET_KEY=sk_test_your-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Products & Prices
# Create products at: https://dashboard.stripe.com/test/products
STRIPE_PRICE_MONTHLY=price_xxxxx
STRIPE_PRICE_STARTER=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRODUCT_ID=prod_xxxxx

# Client-side Stripe keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-test-key
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY=price_xxxxx
NEXT_PUBLIC_STRIPE_PRICE_STARTER=price_xxxxx
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_xxxxx

# Pricing Configuration
SUB_PRICE_USD=29
FZ_RATE_PER_USD=1

# === OpenAI API (LLM Features) ===
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key

# === Application Configuration ===
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Electron (Desktop App) ===
ELECTRON_UPDATE_URL=

# === Phase 49: Error Tracking & Incident Management ===
# For local testing with Functions Emulator:
NEXT_PUBLIC_CF_LOG_URL=http://127.0.0.1:5001/your-project-id/us-central1/log

# For production deployment:
# NEXT_PUBLIC_CF_LOG_URL=https://us-central1-your-project-id.cloudfunctions.net/log

NEXT_PUBLIC_LOG_ENDPOINT=/api/log

# === Phase 52: GitHub Integration ===
# GitHub OAuth App Configuration
# Create OAuth App at: https://github.com/settings/developers
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
